{
  "name": "ralph-island-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all wasm:build:dev dev:web",
    "dev:web": "vite",
    "build": "npm-run-all wasm:build build:web",
    "build:web": "tsc -b && vite build",
    "check:premerge": "scripts/premerge-checks.sh",
    "test:smoke": "node --experimental-strip-types --test scripts/replication-smoke.test.ts",
    "wasm:build": "wasm-pack build game-client --target web --out-dir ../src/game/wasm --out-name client --release",
    "wasm:build:dev": "wasm-pack build game-client --target web --out-dir ../src/game/wasm --out-name client --dev",
    "sprite:generate": "node retro-diffusion/generate-character.mjs",
    "sprite:generate:set": "node retro-diffusion/generate-character-set.mjs",
    "sprite:generate:world": "node retro-diffusion/generate-world-set.mjs",
    "worker:dev": "npm run worker:dev:raw",
    "worker:dev:raw": "wrangler dev --config worker/wrangler.toml",
    "deploy": "npm run build && wrangler deploy --config worker/wrangler.toml",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.60.0",
    "@tanstack/react-router": "^1.159.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260210.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wrangler": "^4.64.0"
  }
}
